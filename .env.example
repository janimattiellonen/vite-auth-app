# Environment variables for Prisma
# See: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Database Configuration
# Format: postgresql://<username>:<password>@<host>:<port>/<database>?schema=<schema>
DATABASE_URL="postgresql://authapp:authpass@localhost:5432/authapp?schema=public"

# Auth0 Single Page Application Configuration
# Get these values from your Auth0 SPA application settings
VITE_AUTH0_DOMAIN="your-tenant.region.auth0.com"
VITE_AUTH0_CLIENT_ID="your-spa-client-id"
VITE_AUTH0_AUDIENCE="https://api.authapp.local"
VITE_AUTH0_CALLBACK_URL="https://localhost:5199/callback"

# Auth0 Management API Configuration
# Get these values from your Auth0 Machine-to-Machine application
AUTH0_MGMT_DOMAIN="your-tenant.region.auth0.com"
AUTH0_MGMT_CLIENT_ID="your-m2m-client-id"
AUTH0_MGMT_CLIENT_SECRET="your-m2m-client-secret"
AUTH0_MGMT_AUDIENCE="https://your-tenant.region.auth0.com/api/v2/"

# Server Configuration
PORT=3001
NODE_ENV="development"